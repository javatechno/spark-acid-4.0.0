#!/bin/bash

name="spark-hiveacid-test-container"

RUNNING=`docker inspect --format "{{ .State.Running}}" ${name}  2>/dev/null`
if [[ $? -eq 0 ]]
then
	if [[ "${RUNNING}" == "true" ]]
	then
		echo "$name already running"
		exit
	fi
else 
	docker  run --user root --name ${name} --hostname localhost -P -p9866:9866 -p10000:10000 -p10001:10001 -p9000:9000 -p3306:3306 -p50070:50070 -p50030:50030 -it -d centos6/spark-hadoop3-hive3
fi

